<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Schedule_Page_TitleBar"
        android:background="#13866f"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:id="@+id/Schedule_Page_back_Title_Bar_Id"
            android:onClick="backtoDetailContent"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Schedule Appointment"
            android:textSize="20sp"
            android:id="@+id/Schedule_Page_text_title_bar_id"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#ffffff" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_name_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_name_id"
            android:text="Name :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_email_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_email_id"
            android:text="Email Id :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Optional"
            android:textColor="#13866f"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_mobile_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_mobile_id"
            android:text="Mobile :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_description_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_description_id"
            android:text="Problem Description :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            />
    </LinearLayout>
