    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_location_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/schedule_location_id"
            android:text="Address :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/schedule_location_textview_id"
            android:textColor="#13866f"

            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/schedule_linear_submit_register_id"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="10sp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/Button_schedule_Bar"
            android:text="Book Appointment"

            android:onClick="schedule_button"
            android:background="@drawable/roundedbutton"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#13866f" />
    </RelativeLayout>
</LinearLayout>