<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Register_TitleBar"
        android:background="#13866f"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:id="@+id/Register_back_Title_Bar_Id"
            android:onClick="backtoMain"
            />
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="Register"
          android:textSize="20sp"

          android:layout_centerHorizontal="true"
            android:textStyle="bold"
          android:layout_centerVertical="true"
          android:textColor="#ffffff" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_name_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="20sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_name_id"
            android:text="Doctor Name :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            android:id="@+id/register_name_edit_id"
            android:singleLine="true"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_email_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_email_id"
            android:text="Email Id :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/register_email_edit_id"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_mobile_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_mobile_id"
            android:text="Mobile :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textColor="#13866f"
            android:maxLines="1"
            android:singleLine="true"
            android:id="@+id/register_mobile_edit_id"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_experience_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_experience_id"
            android:text="Experience :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            >
            <NumberPicker
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:id="@+id/Month_picker"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                >

            </NumberPicker>
        <NumberPicker
            android:layout_width="wrap_content"
            android:id="@+id/Year_picker"
            android:textStyle="bold"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
           >


        </NumberPicker>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#13866f"
                android:text="Since : "
                android:layout_centerVertical="true"
                android:textSize="16sp"
                android:textStyle="bold"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#13866f"
                android:id="@+id/register_month"
                android:text="January "
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:layout_gravity="center_vertical" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#13866f"
                android:id="@+id/register_year"
                android:text="1985"
                android:layout_centerVertical="true"
                android:textSize="13sp"
                android:layout_gravity="center_vertical" />

        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_location_id"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="10sp"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/register_location_id"
            android:text="Location :"
            android:textColor="#13866f"

            android:textSize="20sp"

            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/register_location_textview_id"
            android:textColor="#13866f"
            />
    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/register_linear_submit_register_id"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="10sp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/Button_register_Bar"
            android:text="Register"

            android:onClick="register_button"
            android:background="@drawable/roundedbutton"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#13866f" />
    </RelativeLayout>


</LinearLayout>