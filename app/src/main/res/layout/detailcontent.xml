<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/Detail_Content_TitleBar"
        android:background="#13866f"
        android:paddingLeft="10sp"
        android:paddingRight="10sp"
        >

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/back_arrow"
            android:layout_centerVertical="true"
            android:id="@+id/Detail_Content_back_Title_Bar_Id"
            android:onClick="backtoMain"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Detail"
            android:textSize="20sp"
            android:id="@+id/detail_content_text_title_bar_id"
            android:layout_centerHorizontal="true"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#ffffff" />


    </RelativeLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20sp"
        android:layout_marginRight="20sp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_name_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Name : "

            android:textColor="#169c81"
            android:layout_gravity="center_vertical"
            android:textStyle="bold"
            android:layout_alignParentLeft="true" />


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content_name_id"
            android:textColor="#169c81"
            android:text="---"
            android:layout_gravity="center_vertical"

            />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:id="@+id/detail_content__parent_about_id"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="About : "

            android:textStyle="bold"
            android:textColor="#169c81"
            android:layout_gravity="center_vertical"
            android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_about_id"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true"
                android:text="---"/>
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_specialization_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Specialization : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_specialization_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_experience_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Experience : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_experience_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_mail_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mail Id : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_mail_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_mobile_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mobile No. : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_mobile_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_address_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Address : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_address_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_fees_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Fees : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_fees_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_daysclosed_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Days closed : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_daysclosed_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>
        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1sp"
            android:background="#169c81"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/detail_content__parent_opentime_id"
            android:layout_marginLeft="5sp"
            android:layout_marginRight="5sp"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Open time : "
                android:textStyle="bold"
                android:textColor="#169c81"
                android:layout_gravity="center_vertical"
                android:layout_alignParentLeft="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/detail_content_opentime_id"
                android:textColor="#169c81"
                android:text="---"
                android:layout_gravity="center_vertical"
                android:layout_alignParentRight="true" />
        </LinearLayout>

    </LinearLayout>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/detail_content_submit_schedule_id"
        android:layout_gravity="center_horizontal"

        android:layout_marginTop="10sp"
        >
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:id="@+id/Button_schedule_Bar"
            android:text="Book Appointment"
            android:paddingLeft="6sp"
            android:paddingRight="6sp"
            android:onClick="schedule_button"
            android:background="@drawable/roundedbutton"

            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#13866f" />
    </RelativeLayout>
</LinearLayout>